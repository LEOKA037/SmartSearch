{
  "manifest_version": 3,
  "name": "SmartSearch",
  "version": "1.0",
  "description": "A Chrome extension to search on ChatGPT.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
